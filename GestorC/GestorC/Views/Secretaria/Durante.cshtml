
@{
    ViewBag.Title = "Durante";
    Layout = "~/Views/Shared/SecretariaLayout.cshtml";
}

<div class="container blue">
    <h4><span class="glyphicon glyphicon-hand-right"></span> Durante</h4>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h1 class="float-left">Sesión actual</h1>
        </div>
        <div class="col-sm-6">
            <h1 class="float-right">Quórum: 2 personas</h1>
        </div>
    </div>




    <div class="row">
        <!--Tabla de presentes-ausentes-->
        <div class="col-sm-2 div-border-right">
            <center>
                <label>Personas presentes</label>
                <table class="table list-size">
                    <thead>
                        <tr class="th-header">
                            <th class="float-left">Nombre</th>
                            <th class="float-right">Cambiar Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="success">
                            <td class="float-left">Iván</td>
                            <td class="float-right">@Html.ActionLink("Ausente","Asistencia","Secretaria", new { correo = "ivanfelipecp", estado = true}, null)</td>
                        </tr>
                        <tr class="success">
                            <td class="float-left">Adán</td>
                            <td class="float-right"><a href="">Ausente</a></td>
                        </tr>
                    </tbody>
                </table>

                <label>Personas ausentes</label>
                <table class="table list-size">
                    <thead>
                        <tr class="th-header">
                            <th class="float-left">Nombre</th>
                            <th class="float-right">Cambiar Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="danger">
                            <td class="float-left">Fauricio</td>
                            <td class="float-right"><a href="">Presente</a></td>
                        </tr>
                        <tr class="danger">
                            <td class="float-left">Alejandro</td>
                            <td class="float-right"><a href="">Presente</a></td>
                        </tr>
                    </tbody>
                </table>
            </center>
        </div>

        <!--Tabla de puntos-->
        <div class="col-sm-5">
            <label>Puntos de agenda</label>
            <table class="table large-size-input">
                <thead>
                    <tr class="th-header">
                        <th class="float-left">Nombre</th>
                        <!-- <th class="float-right">Gestionar</th> -->
                    </tr>
                </thead>
                <tbody>
                    <tr class="info">
                        <td class="float-left">Aprobación de la beca de Iván</td>
                        <!-- <td class="float-right"><a href="">Modificar</a></td> -->
                    </tr>
                    <tr>
                        <td>Aprobación del intercambio de Adán</td>
                        <!-- <td class="float-right"><a href="" class="disabled">Modificar</a></td> -->
                    </tr>
                    <tr>
                        <td>Solicitudes de cambio de carrera</td>
                    </tr>
                    <tr>
                        <td>Cambio en Bases de datos 2</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Punto -->
        <div class="col-sm-5 div-border-left">
            <!-- Registrar votacion -->
            <div>
                <label><h3>Registrar votación</h3></label>
                <button type="button" class="btn btn-primary blue-bg" data-toggle="collapse" data-target="#votaciones"><span class="glyphicon glyphicon-menu-down"></span></button>
                <div id="votaciones" class="collapse">
                    <form class="small-size-input" id="notificar" action="/Secretaria/Votacion" method="post">

                        <input type="hidden" name="id" value="999"/>

                        <div class="form-group row margin-form-left">
                            <label for="example-number-input" class="">A favor</label>
                            <div class="">
                                <input class="form-control" type="number" value="0" name="favor">
                            </div>
                        </div>

                        <div class="form-group row margin-form-left">
                            <label for="example-number-input" class="">En contra</label>
                            <div class="">
                                <input class="form-control" type="number" value="0" name="contra">
                            </div>
                        </div>

                        <div class="form-group row margin-form-left">
                            <label for="example-number-input" class="">Abstenciones</label>
                            <div class="">
                                <input class="form-control" type="number" value="0" name="abstenciones">
                            </div>
                        </div>

                        

                        <div class="form-group row margin-form-left">
                            <button type="submit" class="btn btn-primary float-left blue-bg">Guardar</button>
                        </div>
                    </form>
                </div> <!-- colapse de votacion -->
            </div>

            <!-- Comentarios -->
            <div>
                <label><h3>Registrar comentario</h3></label>
                <button type="button" class="btn btn-primary blue-bg" data-toggle="collapse" data-target="#comentarios"><span class="glyphicon glyphicon-menu-down"></span></button>
                <div id="comentarios" class="collapse">
                    <form class="small-size-input" id="comentario" action="/Secretaria/Comentario" method="post">
                        <div class="form-group row margin-form-left">
                            <label for="example-number-input" class="">Miembros</label>
                            <div class="">
                                <input class="form-control" list="miembros" name="correo">
                                <datalist id="miembros">
                                    <option value="Miembro 1">
                                    <option value="Miembro 2">
                                    <option value="Miembro 3">
                                    <option value="Miembro 4">
                                    <option value="Miembro 5">
                                </datalist>
                            </div>
                        </div>

                        <div class="form-group row margin-form-left">
                            <label for="example-text-area" class="">Comentario</label>
                            <div class="">
                                <!-- <input class="form-control" type="textarea" value="" id="example-text-area" placeholder="Digite el encabezado"> -->
                                <textarea name="comentario" rows="5" cols="50" form="comentario" placeholder="Comentario..."></textarea>
                            </div>
                        </div>

                        <div class="form-group row margin-form-left">
                            <button type="submit" class="btn btn-primary float-left blue-bg">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <h2>Aprobación de la beca de Iván</h2>
            <h3>Votos a favor: 0</h3>
            <h3>Votos en contra: 0</h3>
            <h3>Abstenciones: 0</h3>

            <div>
                <h3>Comentarios</h3>
                <table class="table large-size-input">
                    <thead>
                        <tr class="th-header">
                            <th class="float-left">Miembro</th>
                            <th class="float-center">Comentario</th>
                            <th class="float-right">Eliminar</th>
                            <!-- <th class="float-right">Gestionar</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="">
                            <td class="float-left">Miembro 1</td>
                            <td class="float-center"><p>Excelente!!!</p></td>
                            <td class="float-right"><a href="">Eliminar</a></td>
                            <!-- <td class="float-right"><a href="">Modificar</a></td> -->
                        </tr>
                    </tbody>
                </table>
            </div>

            

        </div> <!-- columna -->
    </div> <!-- row -->
</div> <!-- container -->